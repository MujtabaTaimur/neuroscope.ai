{
  "name": "Subscription",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string",
      "description": "Email of the subscribed user"
    },
    "tier": {
      "type": "string",
      "enum": [
        "free",
        "one_time",
        "monthly"
      ],
      "default": "free",
      "description": "Subscription tier"
    },
    "amount_paid": {
      "type": "number",
      "description": "Amount paid in USD"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "expired",
        "cancelled"
      ],
      "default": "active"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the subscription expires (for monthly plans)"
    }
  },
  "required": [
    "user_email",
    "tier"
  ]
}
