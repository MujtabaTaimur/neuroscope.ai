        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1400px",
        "full": "100%"
      }
    },
    "zIndex": {
      "base": "0",
      "dropdown": "1000",
      "sticky": "1020",
      "fixed": "1030",
      "modalBackdrop": "1040",
      "modal": "1050",
      "popover": "1060",
      "tooltip": "1070",
      "canvas": "0",
      "content": "10",
      "nav": "100"
    },
    "animation": {
      "duration": {
        "fast": "150ms",
        "base": "300ms",
        "slow": "500ms",
        "slower": "800ms",
        "slowest": "1200ms"
      },
      "easing": {
        "linear": "linear",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
        "smooth": "cubic-bezier(0.16, 1, 0.3, 1)"
      },
      "keyframes": {
        "neuralPulse": {
          "0%, 100%": { "opacity": "0.3", "transform": "scale(1)" },
          "50%": { "opacity": "0.8", "transform": "scale(1.05)" }
        },
        "glowBreath": {
          "0%, 100%": { "boxShadow": "0 0 20px rgba(43, 89, 255, 0.2), 0 0 40px rgba(123, 62, 255, 0.1)" },
          "50%": { "boxShadow": "0 0 30px rgba(43, 89, 255, 0.4), 0 0 60px rgba(123, 62, 255, 0.2)" }
        },
        "floatIn": {
          "from": { "opacity": "0", "transform": "translateY(40px)" },
          "to": { "opacity": "1", "transform": "translateY(0)" }
        },
        "textShimmer": {
          "0%": { "backgroundPosition": "-200% center" },
          "100%": { "backgroundPosition": "200% center" }
        },
        "toolActivation": {
          "0%": { "transform": "scale(1)", "opacity": "1" },
          "50%": { "transform": "scale(1.1)", "opacity": "0.8" },
          "100%": { "transform": "scale(1)", "opacity": "1" }
        },
        "expand": {
          "from": { "maxHeight": "0", "opacity": "0" },
          "to": { "maxHeight": "1000px", "opacity": "1" }
        },
        "collapse": {
          "from": { "maxHeight": "1000px", "opacity": "1" },
          "to": { "maxHeight": "0", "opacity": "0" }
        }
      }
    },
    "backdrop": {
      "blur": {
        "sm": "blur(10px)",
        "base": "blur(20px)",
        "md": "blur(30px)",
        "lg": "blur(40px)",
        "xl": "blur(60px)"
      },
      "glass": {
        "light": "rgba(255, 255, 255, 0.02)",
        "medium": "rgba(255, 255, 255, 0.05)",
        "heavy": "rgba(255, 255, 255, 0.1)"
      }
